#!/usr/bin/env bash

# Create necessary DVC directories that are gitignored
mkdir -p .dvc/tmp .dvc/cache

dvc config core.no_scm true
if dvc pull; then
    echo "DVC pull successful!"
    echo "Model files:"
    ls -lh model/ 2>/dev/null || echo "ERROR: model/ directory not found"
else
    echo "ERROR: DVC pull failed!"
    echo "ERROR: Model files may not be available. Check AWS credentials."
    exit 0  # Don't fail the build, let the app handle missing models
fi
